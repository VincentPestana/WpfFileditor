<Window x:Name="winMain" x:Class="WpfFileditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfFileditor"
        mc:Ignorable="d"
        Title="WPF Based File Editor" Height="450" Width="800" Loaded="winMain_Loaded">
	<Grid>
		<TextBox x:Name="txtMain" HorizontalAlignment="Center" Margin="0,23,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="780" Height="401" AcceptsReturn="True"/>
		<Menu DockPanel.Dock="Top" VerticalAlignment="Top">
			<MenuItem Header="_File">
				<MenuItem Header="_Open" Click="MenuItem_Click"/>
				<MenuItem x:Name="MenuSave" Header="_Save" Click="MenuSave_Click"/>
				<MenuItem x:Name="MenuSaveAs" Header="Save _As" Click="MenuSaveAs_Click" />
				<MenuItem x:Name="MenuClose" Header="_Clear" Click="MenuItem_Click_1"/>
				<Separator/>
				<MenuItem Header="E_xit" Click="MenuItem_Click_2"/>
			</MenuItem>
		</Menu>


	</Grid>
</Window>
