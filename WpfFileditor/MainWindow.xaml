<Window x:Class="WpfFileditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfFileditor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<Grid>
		<TextBox x:Name="txtMain" HorizontalAlignment="Center" Margin="0,33,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="780" Height="391" AcceptsReturn="True"/>
		<Button x:Name="btnLoadFile" Content="Open File" HorizontalAlignment="Left" Margin="10,8,0,0" VerticalAlignment="Top" Click="btnLoadFile_Click"/>
		<Label x:Name="lblFilename" Content="Open a file" HorizontalAlignment="Left" Margin="100,5,0,0" VerticalAlignment="Top" Width="410"/>


	</Grid>
</Window>
